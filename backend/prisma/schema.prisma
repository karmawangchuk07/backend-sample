generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model user{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String @unique 
  password String
  reviews Review[]
}
model Restaurant{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  location String
  review Review[]
  menu Menu[]
}

model Menu{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  foodItems String
  price Float
  description String
  restaurantId String? @db.ObjectId
  restaurant Restaurant? @relation(fields: [restaurantId],references: [id])
}

model Review{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  comment String
  rating Int
  ambience String?
  restaurantId String? @db.ObjectId
  restaurant Restaurant? @relation(fields: [restaurantId],references: [id])
  userId String? @db.ObjectId
  user user? @relation(fields: [userId],references: [id])
}